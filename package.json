{
  "name": "overtype-markdown-viewer",
  "displayName": "OverType Markdown Viewer",
  "description": "VS Code extension for OverType - a lightweight WYSIWYG markdown editor with perfect alignment",
  "version": "0.1.1",
  "publisher": "your-publisher-name",
  "repository": {
    "type": "git",
    "url": "https://github.com/djkz/overtype-vscode-extension.git"
  },
  "bugs": {
    "url": "https://github.com/djkz/overtype-vscode-extension/issues"
  },
  "homepage": "https://github.com/djkz/overtype-vscode-extension#readme",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "Visualization"
  ],
  "keywords": [
    "markdown",
    "preview",
    "editor",
    "wysiwyg",
    "overtype"
  ],
  "activationEvents": [
    "onLanguage:markdown",
    "onCommand:overtype.openPreview",
    "onCommand:overtype.openPreviewToSide",
    "onWebviewPanel:overtype.preview"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "overtype.openPreview",
        "title": "Open with OverType",
        "category": "OverType",
        "icon": "$(open-preview)"
      },
      {
        "command": "overtype.openPreviewToSide",
        "title": "Open OverType to the Side",
        "category": "OverType",
        "icon": "$(open-preview)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "resourceExtname == .md",
          "command": "overtype.openPreview",
          "group": "navigation"
        },
        {
          "when": "resourceExtname == .md",
          "command": "overtype.openPreviewToSide",
          "group": "navigation"
        }
      ],
      "explorer/context": [
        {
          "when": "resourceExtname == .md",
          "command": "overtype.openPreview",
          "group": "navigation"
        }
      ],
      "editor/title/context": [
        {
          "when": "resourceExtname == .md",
          "command": "overtype.openPreview"
        }
      ],
      "commandPalette": [
        {
          "command": "overtype.openPreview",
          "when": "resourceExtname == .md"
        },
        {
          "command": "overtype.openPreviewToSide",
          "when": "resourceExtname == .md"
        }
      ]
    },
    "keybindings": [
      {
        "command": "overtype.openPreview",
        "key": "ctrl+shift+v",
        "mac": "cmd+shift+v",
        "when": "resourceExtname == .md && !notebookEditorFocused"
      },
      {
        "command": "overtype.openPreviewToSide",
        "key": "ctrl+k v",
        "mac": "cmd+k v",
        "when": "resourceExtname == .md && !notebookEditorFocused"
      }
    ],
    "configuration": {
      "title": "OverType Markdown Viewer",
      "properties": {
        "overtype.theme": {
          "type": "string",
          "default": "solar",
          "enum": [
            "solar",
            "cave",
            "auto"
          ],
          "enumDescriptions": [
            "Light theme",
            "Dark theme",
            "Follow VS Code theme"
          ],
          "description": "Choose the OverType theme"
        },
        "overtype.fontSize": {
          "type": "string",
          "default": "14px",
          "description": "Font size for the OverType editor"
        },
        "overtype.showToolbar": {
          "type": "boolean",
          "default": true,
          "description": "Show the formatting toolbar"
        },
        "overtype.showStats": {
          "type": "boolean",
          "default": false,
          "description": "Show character, word, and line statistics"
        },
        "overtype.autoSave": {
          "type": "boolean",
          "default": true,
          "description": "Automatically save changes to the file"
        },
        "overtype.autoSaveDelay": {
          "type": "number",
          "default": 1000,
          "description": "Delay in milliseconds before auto-saving"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile && npm run bundle-overtype",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "bundle-overtype": "node scripts/bundle-overtype.js",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4",
    "@vscode/vsce": "^2.22.0"
  },
  "dependencies": {}
}